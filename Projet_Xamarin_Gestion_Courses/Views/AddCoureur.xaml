<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projet_Xamarin_Gestion_Courses.Views.AddCoureur">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Coureur.Prenom}"/>
            <Entry Text="{Binding Coureur.Nom}"/>
            <Entry Text="{Binding Coureur.Age}"/>
            <Entry Text="{Binding Coureur.Sexe}"/>
            <Button Text="Valider" Command="{Binding ValiderMonCoureur}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
